<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="voelkel.datatables.theme">bootstrap3</parameter>
    </parameters>

    <services>
        <service id="voelkel.datatables.twig_extension" class="Voelkel\DataTablesBundle\Twig\DataTablesExtension" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="router" />
            <argument type="string">%voelkel.datatables.theme%</argument>
        </service>

        <service id="voelkel.datatables.data_to_string_converter" class="Voelkel\DataTablesBundle\DataTables\DataToStringConverter" public="false">
            <argument type="string">%locale%</argument>
        </service>

        <service id="voelkel.datatables" class="Voelkel\DataTablesBundle\DataTables\ServerSide">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="voelkel.datatables.data_to_string_converter" />
        </service>
    </services>

</container>
