<table id="{{ table.name }}" class="table table-striped_ table-bordered_ table-hover table-condensed_{% if options.class is defined %} {{ options.class }}{% endif %}">
    <thead>
        {% if table.hasColumnFilter %}
        <tr>
            {% for column in table.columns %}
            <th>
                {% if column.options.filter == 'text' %}
                    <input type="text" class="form-control input-sm" id="{{ table.name }}_{{ column.name }}_filter" placeholder="{{ column.label }}">
                {% elseif column.options.filter == 'select' %}
                    <select id="{{ table.name }}_{{ column.name }}_filter" class="form-control"{% if column.options.multiple %} multiple="multiple"{% endif %}>

                        {% if not column.options.multiple %}
                            <option value="">-- {{ column.label }} --</option>
                        {% endif %}

                        {% for key, label in column.options.filter_choices %}
                            <option value="{{ key }}">{{ label }}</option>
                        {% endfor %}
                    </select>
                {% endif %}

                {% if column.options.filter_empty %}
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="{{ table.name }}_{{ column.name }}_filter_empty">
                    </label>
                </div>
                {% endif %}
            </th>
            {% endfor %}
        </tr>
        {% endif %}
        <tr>
            {% for column in table.columns %}
                <th>{{ column.label }}</th>
            {% endfor %}
        </tr>
    </thead>
    <tbody></tbody>
</table>
